{% extends "layout.njk" %}
{% set active_page = "edit" %}
{% block pagina %}
    <h2>Alteração da Música</h2>
    <form action='/edit/{{musica.id}}' method='POST'>
        <input type='hidden' name="_method" value='PUT' />
        <div class="form-group">
            <label for="id">Id</label>
            <p class="form-control" id="id">{{musica.id}}</p>
        </div>
        <div class="form-group">
            <label for="nome">Nome da música</label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="informe o nome da música" value="{{musica.nome}}" />
        </div>
        <div class="form-group">
            <label for="artista">Nome do artista</label>
            <input type="text" class="form-control" name="artista" id="artista" placeholder="informe o nome do artista" value="{{musica.artista}}" />
        </div>
        <div class="form-group">
            <label for="estrelas">Total de estrelas</label>
            <input type="text" class="form-control" name="estrelas" id="estrelas" placeholder="informe o total de estrelas" value="{{musica.estrelas}}" />
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a href="/" class="btn btn-default">Voltar</a>
    </form>
{% endblock %}